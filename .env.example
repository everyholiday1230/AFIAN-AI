# QUANTUM ALPHA - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Exchange API Keys
# ============================================================================

# Bybit API (for order execution)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true  # Set to false for live trading

# Binance API (for market data - optional)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ============================================================================
# Database
# ============================================================================

# TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=quantum_alpha
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=your_timescale_password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================================================
# System Configuration
# ============================================================================

# System mode: paper_trading, live
SYSTEM_MODE=paper_trading

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================================================
# Risk Management
# ============================================================================

# Daily loss limit (USD)
DAILY_LOSS_LIMIT=500.0

# Maximum drawdown (%)
MAX_DRAWDOWN_PCT=20.0

# Maximum leverage
MAX_LEVERAGE=10.0

# ============================================================================
# Monitoring & Alerts
# ============================================================================

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@example.com

# ============================================================================
# Performance & Optimization
# ============================================================================

# PyTorch
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Number of workers
NUM_WORKERS=4

# GPU device (if available)
CUDA_VISIBLE_DEVICES=0

# ============================================================================
# Development
# ============================================================================

# Enable debug mode
DEBUG=false

# Disable model training (use pre-trained models only)
MODELS_INFERENCE_ONLY=true

# ============================================================================
# Security
# ============================================================================

# JWT secret for API authentication
JWT_SECRET=your_random_secret_key_here

# API rate limiting
API_RATE_LIMIT=100

# IP whitelist (comma-separated)
IP_WHITELIST=127.0.0.1,::1

# ============================================================================
# Additional Services
# ============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# Notes
# ============================================================================

# 1. NEVER commit the .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for testnet and live trading
# 4. Enable 2FA on all exchange accounts
# 5. Use IP whitelisting where possible
# 6. Monitor your API key permissions regularly
